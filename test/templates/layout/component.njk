
<!--
section:
    modifier=[],
    classes=[],
    aria={}
-->
{%- macro section(modifier=[], aria={}, classes=[]) %}
<section class="fd-section{{ classes | classes }}{{ modifier | modifier("section") }}"{{aria | aria}}>
    {{- caller() | indent -}}
</section>
{%- endmacro %}

{%- macro section_header(properties={}, modifier=[], aria={}, classes=[]) %}
<header class="fd-section__header{{ classes | classes }}{{ modifier | modifier("section__header") }}">
    {%- if properties.title %}
        {% set title_size = properties.title_size  if properties.title_size  else "h3" %}
        <{{title_size}} class="fd-section__title">{{ properties.title }}</{{title_size}}>
    {%- endif %}
    {{- caller() | indent -}}
</header>
{%- endmacro %}

{%- macro section_footer(properties={}, modifier=[], aria={}, classes=[]) %}
<footer class="fd-section__footer">
    {{ caller() }}
</footer>
{%- endmacro %}

{%- macro section_actions(properties={}, modifier=[], aria={}, classes=[]) %}
<div class="fd-section__actions">
    {{ caller() }}
</div>
{%- endmacro %}

