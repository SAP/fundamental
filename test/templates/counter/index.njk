{% extends "layout.njk" %}
{% from "./component.njk" import counter %}
{% from "./../format.njk" import format %}

{% set css_deps = ['fonts','helpers','icons', 'components/menu', 'components/tabs', 'components/button'] %}

{% block content %}
<div>

    <h2>default</h2>
    <p>Show nothing when 0, max is 999</p>
    <br>
    {% set single_counter %}
{{ counter(count=0, modifier="") }}
{{ counter(count=5, modifier="") }}
{{ counter(count=25, modifier="") }}
{{ counter(count=101, modifier="") }}
{{ counter(count=4001, modifier="") }}
    {% endset %}
    {{ format(single_counter) }}
</div>

<br><br>
<h2>notification</h2>


{% set example %}
<button class="fd-button--light sap-icon--bell" aria-label="Notifications">{{ counter(count=1,modifier="notification") }}</button>

<button class="fd-button--light sap-icon--bell" aria-label="Notifications">{{ counter(count=20,modifier="notification") }}</button>

<button class="fd-button--light sap-icon--bell" aria-label="Notifications">{{ counter(count=300,modifier="notification") }}</button>

<button class="fd-button--light sap-icon--bell" aria-label="Notifications">{{ counter(count=6000,modifier="notification") }}</button>

<nav class="fd-menu fd-menu--addon-before">
    <ul class="fd-menu__list">
      <li><div class="fd-menu__addon-before"><span class="sap-icon--bell"></span>{{ counter(count=5,modifier="notification",aria={ label: "Unread count"}) }}</div><a href="#" class="fd-menu__item">Option 2</a>
    </li>
    </ul>
</nav>

{% endset %}
{{ format(example) }}
<br><br>



