                'actions': button(
                        { icon: 'more' },
                        modifier={ block: ['icon','text','small'] },
                        aria={ label: 'BUTTON_LABEL' }
                    )
            },
            modifier={
                block: ['button']
            })
    }}
{% endset %}
{{ format(example) }}

