{% extends "layout.njk" %}
{% from "./component.njk" import card %}
{% from "../button/component.njk" import button %}
{% from "./../format.njk" import format %}
{% set css_deps = ['fonts','helpers','icons','components/button'] %}


{% block content %}

<h1>Card</h1>
{% set example %}
    {{  card(
            {
                'title': 'Primary Value',
                'description': 'Secondary Value aute irure dolor in reprehenderit in voluptate',
                'status': 'Status'
            })
    }}
{% endset %}
{{ format(example) }}


<h1>Button Card</h1>
{% set example %}
    {{  card(
            {
                'title': 'Lorem ipsum dolor quam placeat numquam repellendus',
                'description': 'Tenetur quam placeat obcaecati molestias voluptatibus dolorum ut.',
                'status': '<span class="fd-has-color-status-1">Voluptate quis adipisci sit</span>'
            },
            modifier={
                block: ['button']
            },
            aria={
                role: 'button'
            })
    }}
{% endset %}
{{ format(example) }}


<h1>Disabled Card</h1>
{% set example %}
    {{  card(
            {
                'title': 'Repellendus obcaecati molestias',
                'description': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit aute irure dolor in reprehenderit in voluptate',
                'status': '<span>Voluptate quis adipisci sit</span> | <span>Voluptate quis adipisci sit</span>'
            },
            modifier={
                block: ['button']
            },
            state={
                disabled: true
            },
            aria={
                role: 'button'
            })
    }}
{% endset %}
{{ format(example) }}

<hr>

<h1>Actions Card</h1>
{% set example %}
    {{  card(
            {
                'title': 'Lorem ipsum dolor quam placeat numquam repellendus',
