{% set css_deps = ['components/popover','components/menu','components/shellbar'] %}

{% block content %}


    <!-- output the component example and the code snippet -->
    {% set example %}

    {{  product_menu(
            product=data.properties,
            brand=data.properties.brand,
            modifier={
