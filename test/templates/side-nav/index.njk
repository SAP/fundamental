<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['components/nav', 'icons'] %}

{% block content %}

<style media="screen">
    .fd-side-nav{
        float: left;
        margin: 0 30px 50px 0;
    }
</style>


    <!-- output the component example and the code snippet -->
    {% set example %}

        {{ side_nav(
                properties = {
                    "items": [
                    { "label": "Link Item"},
                    { "label": "Link Item" },
                    {
                        "label": "item link",
                        "selected": true
                     },
                    { "label": "Link Item" },
                    { "label": "Link Item" },
                    { "label": "Link Item" },
                    { "label": "Link Item" }
                    ]
                }
            )
