{% extends "./master.njk" %}
{% from "../../action-bar/component.njk" import action_bar %}
{% from "../../button/component.njk" import button as btn %}

{# ui-level vars #}
{%- set hide_ui_header = true %}
{%- set hide_ui_footer = true %}
{%- set show_ui_overlay = show_ui_overlay or false %}

{# page-level vars #}
{%- set hide_page_header = hide_page_header or false %}
{%- set hide_page_footer = hide_page_footer or false %}
{%- set is_landing_page = is_landing_page or false %}
{%- set is_editable_page = is_editable_page or false %}
{%- set show_toolbar = show_toolbar or false %}
{%- set page_floorplan = page_floorplan or false %}

{# ui-level blocks #}
{% block ui_header -%}
{%- endblock %}
{% block ui_footer -%}
{%- endblock %}
{% block ui_overlay -%}
{%- endblock %}
{% block ui_app -%}
<article class="fd-page">
    {% if hide_page_header !== true %}
    <header class="fd-page__header">
        {% block page_header -%}
        {%- if page_floorplan == "list" %}
        {% set actions_props = {
            properties: {
                items: [
btn({ label: 'Add New Item', icon: 'add' })
                 ]
            }
        } %}
        {%- endif %}
            {%- if is_editable_page %}
            {%- set actionbtn = btn({ label: 'Cancel', icon: 'close' },modifier={ block: ['text','action-bar'] })
            %}
            {%- set primarybtn = btn({ label: 'Save', icon: 'checked' },modifier={ block: ['action-bar'] })
            %}
            {% set actions_props = {
                properties: {
                    items: [ actionbtn, primarybtn ]
                }
            } %}
            {%- endif %}
            {{  action_bar(
                    properties={
                        title: page_title or "Page Title",
                        description: page_intro or "",
                        navigation: backbtn,
                        actions: actions_props
                    }
                )
            }}
        {%- endblock %}
    </header>
    {% endif %}
    {# {% if page_intro %}
    <div class="fd-page__intro">
        <p><em>{{ page_intro }}</em></p>
    </div>
    {% endif %} #}
    <div class="fd-page__content">
    {% block page_content -%}
    {%- endblock %}

    </div>
</article>

{%- endblock %}
