{% from "../../action-bar/component.njk" import action_bar %}
{% from "../../button/component.njk" import button %}
<!doctype html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <!--[if IE]><![endif]-->
    <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SAP Fundamentals | Starter Page | {{ title }}</title>
    <style media="screen">
    {% set core_sass = 'all.scss' %}
    {{ core_sass | sass_to_css }}
    </style>
</head>
<body class="fd-ui fd-ui--{{ app.id }}">

{%- set backbtn %}
    {{ button(
              { icon: 'backarrow' },
              modifier={ block: ['text','icon','large'] },
              aria={ label: 'Back' }
    )}}
{%- endset %}

    {{  action_bar(
            properties={
                title: "Page Title",
                navigation: backbtn
            },
            modifier={
                block: []
            },
            state={},
            aria={}
        )
    }}

    <div class="fd-container fd-container--fluid fd-has-text-align-center fd-has-padding-reg fd-has-margin-none fd-has-background-color-background-2">
        <p><em>Page description volutpat felis lectus nec consequat ipsum mattis id</em></p>
    </div>


    {% block content %}
    {% endblock %}

    <script type="text/javascript" src="/static/controls.js"></script>
</body>
</html>
