{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "./component.njk" import dropdown, menu %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts','components/button','icons'] %}

{% block content %}

<style media="screen">
    .fd-dropdown {
        margin-right: 10px;
    } 
</style>
{% set sizes = ["default",
      "xs",
      "s",
      "compact",
      "l"] %}
    <h1>dropdown</h1>
    <p><strong>onclick</strong>: change aria-expanded boolean on the control and change aria-hidden boolean on the menu </p>
    <p>Shows default, <code>xs</code>,
    <code>s</code>,
    <code>compact</code>, and
    <code>l</code> sizes. Include modifier on block and button.</p>

    {% set example %}
    {%- for size in sizes %}
{% if size === "default" %}
{{  dropdown(properties=data.properties) }}
{% else %}
{{  dropdown(properties=data.properties,modifier={ block: size }) }}
{% endif %}
    {%- endfor %}

    {% endset %}
    {{ format(example) }}

<br><br>

<h2>icon</h2>

{% set example %}
{%- for size in sizes %}
{% if size === "default" %}
{{  dropdown(properties={
  icon: "filter",
  label: data.properties.label,
  items: [
  { "label": "Option 1" },
  { "label": "Option 2" },
  { "label": "Option 3" }
  ] })
}}
{% else %}
{{  dropdown(properties={
  icon: "filter",
  label: data.properties.label,
  items: [
  { "label": "Option 1" },
  { "label": "Option 2" },
  { "label": "Option 3" }
  ] },modifier={ block: size }) }}
{% endif %}
{%- endfor %}

{% endset %}
{{ format(example) }}


<br><br>

<h2>disabled</h2>

{%- for size in sizes %}
{% if size === "default" %}
{{  dropdown(properties=data.properties, aria={ disabled: true }) }}
{% else %}
{{  dropdown(properties=data.properties,modifier={ block: size }, aria={ disabled: true }) }}
{% endif %}
{%- endfor %}
<br>
{% set example %}
{%- for size in sizes %}
{% if size === "default" %}
{{  dropdown(properties={
  icon: "filter",
  label: data.properties.label }, aria={ disabled: true })
}}
{% else %}
{{  dropdown(properties={
  icon: "filter",
  label: data.properties.label },modifier={ block: size }, aria={ disabled: true }) }}
{% endif %}
{%- endfor %}

{% endset %}
{{ format(example) }}



{% endblock %}
