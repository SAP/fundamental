{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "./component.njk" import nav %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts'] %}

{% block content %}

    <h2>horizontal</h2>

    <!-- output the component example and the code snippet -->
    {% set example %}
    {{  nav(
            data.properties
        )
    }}
    {% endset %}
    {{ format(example) }}

<br><br>

    <p>NOTE: The <code>.fd-form__item</code> container is optional. You can use <code>nav</code> and <code>a</code> elements to the same effect.</p>

{% set example %}
<nav class="fd-nav" role="navigation">
    <a class="fd-nav__link" href="#">Link</a>
    <a class="fd-nav__link is-selected" aria-selected="true" href="#">Selected</a>
    <a class="fd-nav__link" href="#">Link</a>
    <a class="fd-nav__link is-disabled" aria-disabled="true" href="#">Disabled</a>
</nav>
{% endset %}
{{ format(example) }}


<br><br>

    <h2>vertical</h2>
    <!-- output the component example and the code snippet -->
    {% set example %}
    {{  nav(
            data.properties,
            modifier={
                block: "vertical"
            }
        )
    }}
    {% endset %}
    {{ format(example) }}




{% endblock %}
