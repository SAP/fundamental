{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "./component.njk" import panel, panel_header, panel_actions, panel_filters, panel_body, panel_footer %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['helpers','layout/panel'] %}

{% set panel_example %}
{% call panel() -%}
    {% call panel_header({ title: ".fd-panel__title" }) -%}
        {% call panel_actions() -%}
.fd-panel__actions
        {%- endcall %}
    {%- endcall %}
    {%- call panel_filters() %}
.fd-panel__filters
    {%- endcall %}
    {% call panel_body() -%}
      <p>.fd-panel__body</p>
    {%- endcall %}
    {% call panel_footer() -%}
.fd-panel__footer
    {%- endcall %}
{%- endcall %}
{% endset %}



{% block content %}

    <h1>panel</h1>
<p class="fd-has-type-2">NOTE: This is a <code>layout</code> component</p>
    <!-- output the component example and the code snippet -->
    {% set example %}
{{panel_example}}
    {% endset %}

    {{ format(example) }}


{% endblock %}
