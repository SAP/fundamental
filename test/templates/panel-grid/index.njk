{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import panel_grid %}
{% from "./../panel/component.njk" import panel, panel_header, panel_actions, panel_filters, panel_body, panel_footer %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts','icons','helpers','layout/panel','layout/panel-grid'] %}


{% set panel_item %}
{% call panel() -%}
    {% call panel_body() -%}
      <p>.fd-panel</p>
    {%- endcall %}
{%- endcall %}
{% endset %}


{% set panel_item_span %}
{% call panel(classes="has-grid-column-span-2") -%}
    {% call panel_body() -%}
      <p>.fd-panel</p>
    {%- endcall %}
{%- endcall %}
{% endset %}

