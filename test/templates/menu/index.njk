{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import menu %}
{% from "../icon/component.njk" import icon %}

{% set css_deps = ['fonts', 'icons'] %}

{% block content %}

<h1>defatult menu</h1>
{% set example %}
{{ menu(properties=data.properties) }}
{% endset %}
{{ format(example) }}

<br><br><br>

<h1>menu with groups</h1>
{% set example %}
{{ menu(properties={
  items: [
      { "label": "Option 1" },
      { "label": "Option 2"},
      { "label": "Seperator"},
      { "label": "Option 3" },
      {  "label": "Group Header",
        "items": [
            { "label": "Option 4" },
            { "label": "Option 5" },
            { "label": "Option 6" }
        ]
      }
    ]
  })
}}
{% endset %}
{{ format(example) }}

<br><br><br>

<h1>menu with seperators</h1>
{% set example %}
{{ menu(properties={
  items: [
      { "label": "Option 1" },
      { "label": "Seperator", "seperator": true },
      { "label": "Option 2"},
      { "label": "Seperator", "seperator": true },
      { "label": "Option 3" },
      { "label": "Seperator", "seperator": true },
      { "label": "Option 4" },
      { "label": "Seperator", "seperator": true }
    ]
  })
}}
{% endset %}
{{ format(example) }}

<br><br><br>

<h1>menu with icons</h1>
{% set example %}
{{ menu(properties={
            items: [
              { "label": "Option 1" },
              { "label": "Option 2", "icon": "accept" },
              { "label": "Option 3" },
              { "label": "Option 4" }
            ],
            addon_before: true
        },
        modifier=["addon-before"]

        )


}}
{% endset %}
{{ format(example) }}

{% endblock %}
