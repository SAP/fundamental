{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../form/component.njk" import form_item %}
{% from "./component.njk" import toggle %}

{% block content %}


<style>
.fd-toggle{
    margin: 20px 20px 20px 0;
}
</style>

<p>Wrap a regular <code>input[type=checkbox]</code> and an empty <code>.fd-toggle__switch</code>. <i>The empty switch container is necessary for compatibilty with Firefox.</i></p>

<h3>Cozy Toggle (default)</h3>
{% set example %}
<label>
{{  toggle(
        properties={},
        state=data.state,
        aria=data.aria
    )
}}
</label>

<label>
{{  toggle(
        properties={
            offLabel: 'OFF',
            onLabel: 'ON'
        },
        state=data.state,
        aria=data.aria,
        modifier={
            block: ['label']
        }

    )
}}
</label>

<label>
{{  toggle(
        properties={},
        state=data.state,
        aria=data.aria,
        modifier={
            block: ['semantic']
        }

    )
}}
</label>
{% endset %}
{{ format(example) }}

<br><br><br>

<h3>Compact Toggle</h3>
{% set example %}
<label>
{{  toggle(
        properties={},
        state=data.state,
        aria=data.aria,
        modifier={
            block: ['compact']
        }

    )
}}
</label>

<label>
{{  toggle(
        properties={
            offLabel: 'OFF',
            onLabel: 'ON'
        },
        state=data.state,
        aria=data.aria,
        modifier={
            block: ['label', 'compact']
        }

    )
}}
</label>

<label>
{{  toggle(
        properties={},
        state=data.state,
        aria=data.aria,
        modifier={
            block: ['compact', 'semantic']
        }

    )
}}
</label>
{% endset %}
{{ format(example) }}

