<!--
__COMPONENT_METHOD__:
    properties={},
    modifier={ block: [] },
    state={},
    aria={}
-->
{% macro __COMPONENT_METHOD__(properties={}, modifier={}, state={}, aria={}) -%}
<div class="fd-__COMPONENT_ID__{{ modifier.block | modifier('__COMPONENT_ID__') }}{{ state | state }}"{{ aria | aria }}>
    <div class="fd-__COMPONENT_ID____content{{ modifier.content | modifier('__COMPONENT_ID____content') }}">
        <h1 class="fd-__COMPONENT_ID____title">{{ properties.title }}</h1>
        {%- if properties.description %}
            {{ properties.description }}
        {%- endif %}
    </div>
</div>
{%- endmacro %}
