{
    "namespace": "fd",
    "root": {
        "css": "./scss",
        "icons": "./icons",
        "dest": "./dist",
        "docs": "./docs",
        "www": "./www",
        "cdn": "./cdn",
        "images": "./public/images"
  },
  "tasks": {
    "css": {
        "prefix": "fiori-fundamentals",
        "autoprefixer": {
            "browsers": ["last 2 versions"],
            "cascade": true
        },
        "cleanCSS": {
            "format": "beautify"
        },
        "extensions": ["scss"]
    },
    "icons": {
        "svgs": {
            "path": "svgs"
        },
        "css": {
            "dest": "./scss/icons",
            "template": "./icons/icons-template.scss",
            "outputName": "icon.scss"
        },
        "data": {
            "dest": "./test/templates/icon",
            "template": "./icons/icons-data.json",
            "outputName": "data.json"
        },
        "yml": {
            "dest": "./docs/_data",
            "template": "./icons/icons-data.yml",
            "outputName": "icons.yml"
        },
        "iconfont": {
            "fontName": "FundamentalIcons",
            "className": "icon",
            "formats": ["woff", "woff2"],
            "normalize": true,
            "centerHorizontally": true,
            "fontHeight": 100,
            "prependUnicode": false
        },
        "templates": {
            "html": "./ops/misc/icons-template.html"
        }
    },

    "browserSync": {
      "server": {
        "baseDir": "./www"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascripts",
      "dest": "javascripts",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },


    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production" : {
      "rev": true
    }
  }
}
